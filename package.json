{
  "name": "kii-cloud-sdk",
  "version": "3.0.2",
  "description": "This is the Kii Cloud SDK",
  "author": "Kii Corp",
  "licenses": [
    {
      "type": "KII",
      "url": "http://en.kii.com/terms"
    }
  ],
  "repository": "KiiCorp/KiiCloudSDK-JS",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "files": [
    "lib/"
  ],
  "homepage": "https://www.kii.com",
  "scripts": {
    "build": "tsc -p tsconfig.json && tsc -p tsconfig_cjs.json",
    "standalone": "webpack --mode=production",
    "standalone:plain": "webpack --mode=development --no-devtool",
    "standalone:prod": "webpack --mode=production --output-filename KiiSDK.min.js",
    "doc": "typedoc --excludePrivate --out docs --readme none src/index.ts",
    "test": "jest",
    "test:ci": "jest --ci --runInBand",
    "verset": "func() { if [ -z $1 ]; then echo \"usage: npm run verset -- 3.x.y\"; else sed -i '' -E \"s/return \\\"[0-9]+\\.[0-9]+\\.[0-9]+\\\";/return \\\"${1}\\\";/g\" src/kii.ts; sed -i '' -E \"s/\\\"version\\\": \\\"[0-9]+\\.[0-9]+\\.[0-9]+\\\",/\\\"version\\\": \\\"${1}\\\",/g\" package.json; sed -i '' -E \"s/\\\"version\\\" ?: \\\"v[0-9]+\\.[0-9]+\\.[0-9]+\\\"/\\\"version\\\": \\\"v${1}\\\"/g\" sdk-metadata.json; fi; }; func"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  },
  "files": [
    "KiiSDK.js",
    "KiiSDK.min.js",
    "lib/**/*"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "jest": "^26.6.3",
    "prettier": "2.4.1",
    "ts-jest": "^26.4.4",
    "ts-loader": "^9.2.6",
    "typedoc": "^0.22.11",
    "typescript": "^4.1.3",
    "webpack": "^5.54.0",
    "webpack-cli": "^4.8.0"
  }
}
